# Swift Transport Dockerfile
FROM swift:5.9-focal

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    build-essential \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy Swift package files
COPY Package.swift Package.resolved ./
COPY Sources/ ./Sources/
COPY Tests/ ./Tests/
COPY Examples/ ./Examples/

# Create test binary directory
RUN mkdir -p Sources/SwiftTransportTest

# Copy test binary source
COPY integration-tests/SwiftTransportTest.swift Sources/SwiftTransportTest/main.swift

# Build the Swift package
RUN swift build -c release

# Create necessary directories
RUN mkdir -p /app/test-data /app/logs

# Expose ports for QUIC communication
EXPOSE 50003 50004

# Set environment variables
ENV SWIFT_LOG_LEVEL=debug
ENV NODE_ID=swift-node-001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:50003/health || exit 1

# Default command
CMD ["swift", "run", "SwiftTransportTest"] 