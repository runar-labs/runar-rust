# Rust Transport Dockerfile
FROM rust:1.75-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    build-essential \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy the entire Rust project (from parent directory)
COPY .. .

# Create test binary directory
RUN mkdir -p src/bin

# Copy test binary source
COPY rust-transport-test.rs src/bin/rust-transport-test.rs

# Build the project
RUN cargo build --release --bin rust-transport-test

# Create necessary directories
RUN mkdir -p /app/test-data /app/logs

# Expose ports for QUIC communication
EXPOSE 50001 50002

# Set environment variables
ENV RUST_LOG=debug
ENV NODE_ID=rust-node-001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:50001/health || exit 1

# Default command
CMD ["./target/release/rust-transport-test"] 